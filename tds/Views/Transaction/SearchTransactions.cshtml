                                                    </tr>
                                                </thead>
                                                <tbody id="tableBody">

                                                 
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                    <nav>
                                        @if (ViewBag.transList != null && ViewBag.check == null)

                                        {

                                            <div id='Paging' style="text-align:center">
