                                                                <td>

                                                                    @item.createDate.ToString("dd-MM-yyyy")
                                                                </td>
                                                                <td>
                                                                    @item.amountPaid

                                                                </td>

                                                                <td>
                                                                    @item.cgstAmount

                                                                </td>
                                                                <td>
                                                                    @item.sgstAmount
                                                                </td>
                                                                <td>
                                                                    @item.itAmount
                                                                </td>
                                                                <td>
                                                                    @item.labourCessAmount
                                                                </td>
                                                                <td>
                                                                    @item.deposit
                                                                </td>
                                                                <td>
                                                                    @item.netAmount
                                                                </td>

